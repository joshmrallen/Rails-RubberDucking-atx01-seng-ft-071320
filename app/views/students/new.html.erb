<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li>
                <font color='red'><%= error %></font>
            </li><br>
        <% end %>
    </ul>
<% end %>

<h1>New Student</h1>
<%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :mod %>
    <%= f.number_field :mod %><br>
    <%= f.submit %>
<% end %>

<br>
<br>
<%= link_to 'Cancel', students_path %>